{
  "name": "Safe Send: Ctrl+Enter Only",
  "description": "ChatGPTとGensparkでEnterで改行、Ctrl+Enterで送信を統一する拡張機能です",
  "version": "1.3.2",
  "manifest_version": 3,

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_title": "Safe Send: Ctrl+Enter Only",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://www.genspark.ai/*",
        "https://*.genspark.ai/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true,
      "match_about_blank": true
    }
  ]
}
